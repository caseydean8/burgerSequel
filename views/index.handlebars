<div class="row" style="margin-top: 10%">
  <h1>Burgers!</h1>
  <img src="/assets/img/burger.jpg" alt="cheeseburger">
</div>

<div class="row">
  <div class="one-half column">
    <h5>is it yummy?</h5>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        
          {{this.burger_name}}

          <button class="devoured" data-id="{{id}}" data-isdevoured="{{devoured}}">eat it!</button>
        
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="one-half column">
    <h5>eaten</h5>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        
          {{this.burger_name}}

          <button class="delete-burger" data-id="{{this.id}}">delete</button>
        
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="">Burger Name:</label>
    <input type="text" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>